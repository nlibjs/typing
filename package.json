{
    "name": "@nlib/typing",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.2.3",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/typing",
    "repository": "https://github.com/nlibjs/typing",
    "engines": {
        "node": ">=12"
    },
    "main": "./cjs/index.js",
    "files": [
        "esm",
        "cjs",
        "src",
        "!**/*.test.ts"
    ],
    "scripts": {
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:ava": "ava",
        "lint": "eslint --ext .ts --ext .js src",
        "build": "run-p build:*",
        "build:index": "npx nlib-indexen --input src --output src/index.ts",
        "build:esm": "run-s build:esm:*",
        "build:esm:tsc": "tsc --project tsconfig.esm.json",
        "build:esm:rename": "npx nlib-change-ext --directory esm --mapping js/mjs",
        "build:esm:resolve": "npx nlib-resolve-imports --include esm --ext mjs",
        "build:cjs": "tsc --project tsconfig.cjs.json",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "devDependencies": {
        "@nlib/change-ext": "0.1.2",
        "@nlib/changelog": "0.1.11",
        "@nlib/eslint-config": "3.17.30",
        "@nlib/githooks": "0.1.0",
        "@nlib/indexen": "0.1.2",
        "@nlib/lint-commit": "0.1.8",
        "@nlib/resolve-imports": "1.0.2",
        "@nlib/test": "4.0.0",
        "@types/eslint": "8.2.2",
        "@typescript-eslint/eslint-plugin": "5.10.0",
        "@typescript-eslint/parser": "5.9.1",
        "ava": "4.0.1",
        "eslint": "8.6.0",
        "lint-staged": "12.1.7",
        "npm-run-all": "4.1.5",
        "ts-node": "10.4.0",
        "typescript": "4.5.4"
    },
    "eslintConfig": {
        "extends": [
            "@nlib"
        ],
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "./src/**/*.test.ts"
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
