{
    "name": "@nlib/typing",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.2.2",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/typing",
    "repository": "https://github.com/nlibjs/typing",
    "engines": {
        "node": ">=12"
    },
    "main": "./esm/index.mjs",
    "exports": {
        "import": "./esm/index.mjs",
        "require": "./cjs/index.cjs"
    },
    "files": [
        "esm",
        "cjs"
    ],
    "scripts": {
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:ava": "ava",
        "lint": "eslint --ext .ts --ext .js src",
        "build": "run-p build:*",
        "build:index": "npx @nlib/indexen --input src --output src/index.ts",
        "build:esm": "run-s build:esm:*",
        "build:esm:tsc": "tsc --project tsconfig.esm.json",
        "build:esm:rename": "npx @nlib/change-ext --directory esm --mapping js/mjs",
        "build:esm:resolve": "npx @nlib/resolve-imports --directory esm --ext mjs",
        "build:cjs": "run-s build:cjs:*",
        "build:cjs:tsc": "tsc --project tsconfig.cjs.json",
        "build:cjs:rename": "npx @nlib/change-ext --directory cjs --mapping js/cjs",
        "build:cjs:resolve": "npx @nlib/resolve-imports --directory cjs --ext cjs --cjs",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.25",
        "@nlib/githooks": "0.1.0",
        "@nlib/test": "4.0.0",
        "@types/eslint": "7.28.0",
        "@typescript-eslint/eslint-plugin": "4.30.0",
        "@typescript-eslint/parser": "4.33.0",
        "ava": "3.15.0",
        "eslint": "7.32.0",
        "lint-staged": "11.1.2",
        "npm-run-all": "4.1.5",
        "ts-node": "10.2.1",
        "typescript": "4.4.2"
    },
    "eslintConfig": {
        "extends": [
            "@nlib"
        ],
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "./src/**/*.test.ts"
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
