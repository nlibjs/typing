{
    "name": "@nlib/typing",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.0.4",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/typing",
    "repository": "https://github.com/nlibjs/typing",
    "engines": {
        "node": ">=12"
    },
    "main": "lib/index.js",
    "files": [
        "lib",
        "!*.test.*"
    ],
    "scripts": {
        "build": "tsc",
        "test": "ava",
        "lint": "eslint --ext .ts --ext .js src"
    },
    "dependencies": {
        "@nlib/global": "^3.17.12"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@nlib/eslint-config": "^3.17.11",
        "@nlib/test": "^3.18.0",
        "@types/eslint": "^7.2.2",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.1",
        "ava": "^3.12.1",
        "eslint": "^7.8.1",
        "husky": "^4.2.5",
        "lint-staged": "^10.3.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "!**/*.module.ts"
        ]
    },
    "eslintConfig": {
        "extends": [
            "@nlib"
        ],
        "overrides": [
            {
                "files": [
                    "src/is/*.ts",
                    "src/is$/*.ts",
                    "src/createTypeChecker.ts",
                    "src/definition.ts",
                    "src/ensure.ts",
                    "src/generics.ts",
                    "src/stringifyDefinition.ts",
                    "src/stringifyDefinition.test.ts",
                    "src/testTypeChecker.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off",
                    "@typescript-eslint/unbound-method": "off"
                }
            },
            {
                "files": [
                    "src/createTypeChecker.ts"
                ],
                "rules": {
                    "max-lines-per-function": "off"
                }
            },
            {
                "files": [
                    "src/ensure.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-unsafe-assignment": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@nlib/eslint-config/commitlint.config.js"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
