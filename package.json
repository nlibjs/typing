{
  "name": "@nlib/typing",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Kei Ito",
    "email": "kei.itof@gmail.com",
    "url": "https://gojabako.zone"
  },
  "homepage": "https://github.com/nlibjs/typing",
  "repository": "https://github.com/nlibjs/typing",
  "type": "module",
  "main": "./esm/index.mjs",
  "files": [
    "esm",
    "!**/*.test.*"
  ],
  "scripts": {
    "test": "run-s test:type build test:jest",
    "test:type": "tsc --noEmit",
    "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src",
    "build": "run-s build:*",
    "build:index": "npx @nlib/indexen --output src/index.mts \"./**/*.mts\"",
    "build:esm": "tsc",
    "version": "npx @nlib/changelog --output CHANGELOG.md && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@nlib/changelog": "0.3.1",
    "@nlib/eslint-config": "3.20.1",
    "@nlib/githooks": "0.2.0",
    "@nlib/indexen": "0.2.9",
    "@nlib/lint-commit": "1.0.1",
    "@types/jest": "29.5.4",
    "eslint": "8.48.0",
    "eslint-plugin-jest": "27.2.3",
    "jest": "29.6.4",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/esm"
    ],
    "testMatch": [
      "**/*.test.mjs"
    ],
    "transform": {},
    "collectCoverage": true
  },
  "eslintConfig": {
    "extends": [
      "@nlib/eslint-config"
    ],
    "overrides": [
      {
        "files": [
          "*.test.mts"
        ],
        "plugins": [
          "jest"
        ],
        "env": {
          "jest/globals": true
        },
        "rules": {
          "max-lines-per-function": "off"
        }
      },
      {
        "files": [
          "src/is/*"
        ],
        "rules": {
          "import/no-relative-parent-imports": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
