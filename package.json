{
	"name": "@nlib/typing",
	"publishConfig": {
		"access": "public"
	},
	"version": "1.1.0",
	"license": "Apache-2.0",
	"author": {
		"name": "Kei Ito",
		"email": "kei.itof@gmail.com",
		"url": "https://gojabako.zone"
	},
	"homepage": "https://github.com/nlibjs/typing",
	"repository": "https://github.com/nlibjs/typing",
	"type": "module",
	"main": "./esm/index.mjs",
	"exports": {
		"import": "./esm/index.mjs",
		"require": "./cjs/index.cjs"
	},
	"files": [
		"cjs",
		"esm",
		"!**/*.test.*"
	],
	"scripts": {
		"test": "tsm-test src",
		"lint": "biome lint",
		"build": "run-s build:*",
		"build:index": "npx @nlib/indexen --output src/index.mts \"./**/*.mts\"",
		"build:esm": "tsc --project tsconfig.esm.json",
		"build:cjs": "run-s build:cjs:*",
		"build:cjs:tsc": "tsc --project tsconfig.cjs.json",
		"build:cjs:rename": "node --import=@nlib/tsm cli-rename-cjs.mts",
		"version": "npx @nlib/changelog --output CHANGELOG.md && git add CHANGELOG.md"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.2",
		"@nlib/tsm": "1.0.0",
		"@types/node": "22.5.5",
		"npm-run-all": "4.1.5",
		"typescript": "5.4.5"
	},
	"renovate": {
		"extends": [
			"github>nlibjs/renovate-config"
		]
	}
}
