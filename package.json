{
    "name": "@nlib/typing",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.4.3",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/typing",
    "repository": "https://github.com/nlibjs/typing",
    "engines": {
        "node": ">=14"
    },
    "type": "module",
    "main": "./lib/index.mjs",
    "files": [
        "lib",
        "!**/*.test.*"
    ],
    "scripts": {
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:jest": "jest",
        "lint": "eslint --ext .ts --ext .js src",
        "build": "run-s build:*",
        "build:index": "nlib-indexen --output src/index.ts \"./**/*.ts\"",
        "build:tsc": "tsc",
        "build:esmify": "nlib-esmify \"./lib/**/*\"",
        "postversion": "run-s postversion:*",
        "postversion:changelog": "nlib-changelog --output CHANGELOG.md",
        "postversion:add": "git add .",
        "postversion:amend": "git commit -m \"$(git log -1 --format=%s)\" --amend"
    },
    "devDependencies": {
        "@nlib/changelog": "0.2.1",
        "@nlib/eslint-config": "3.18.0",
        "@nlib/esmify": "0.1.5",
        "@nlib/githooks": "0.1.0",
        "@nlib/indexen": "0.2.5",
        "@nlib/lint-commit": "0.2.0",
        "@types/eslint": "8.4.5",
        "@types/jest": "28.1.6",
        "@typescript-eslint/eslint-plugin": "5.31.0",
        "@typescript-eslint/parser": "5.31.0",
        "eslint": "8.20.0",
        "eslint-plugin-jest": "26.6.0",
        "jest": "28.1.3",
        "lint-staged": "13.0.3",
        "npm-run-all": "4.1.5",
        "ts-jest": "28.0.7",
        "typescript": "4.7.4"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "collectCoverage": true
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "rules": {
            "@nlib/no-globals": "off"
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                },
                "rules": {
                    "max-lines-per-function": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,cjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
