{
    "ts-node": {
        "transpileOnly": true
    },
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": "./node_modules",
        "paths": {
            "@nlib/global": ["@nlib/global/esm"],
            "@nlib/test": ["@nlib/test/esm"]
        }
    }
}
